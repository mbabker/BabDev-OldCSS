<extension version="2.5" type="plugin" group="content" method="upgrade">
	<name>plg_content_bdpagenav</name>
	<author>Michael Babker</author>
	<creationDate>25-May-2012</creationDate>
	<copyright>Copyright (C) 2012 Michael Babker. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>mbabker@flbab.com</authorEmail>
	<authorUrl>www.babdev.com</authorUrl>
	<version>1.0.0</version>
	<description>PLG_CONTENT_BDPAGENAV_XML_DESCRIPTION</description>
	<files>
		<folder>language</folder>
		<filename plugin="bdpagenav">bdpagenav.php</filename>
		<filename>index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="position"
					type="radio"
					default="1"
					description="PLG_CONTENT_BDPAGENAV_FIELD_POSITION_DESC"
					label="PLG_CONTENT_BDPAGENAV_FIELD_POSITION_LABEL" >
					<option
						value="1">PLG_CONTENT_BDPAGENAV_FIELD_VALUE_BELOW</option>
					<option
						value="0">PLG_CONTENT_BDPAGENAV_FIELD_VALUE_ABOVE</option>
				</field>

				<field
					name="relative"
					type="radio"
					default="1"
					description="PLG_CONTENT_BDPAGENAV_FIELD_RELATIVE_DESC"
					label="PLG_CONTENT_BDPAGENAV_FIELD_RELATIVE_LABEL" >
					<option
						value="1">PLG_CONTENT_BDPAGENAV_FIELD_VALUE_ARTICLE</option>
					<option
						value="0">PLG_CONTENT_BDPAGENAV_FIELD_VALUE_TEXT</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
